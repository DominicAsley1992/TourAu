/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */

@font-face {
	font-family: 'Segoe';
    src: url('segoeuil.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables	w
 */
main-color = #333
menu-color = #666
secondary-color = #FFF
back-color = #FBFBFB


body
	font-family 'Segoe'
	background back-color
	color #333
	

.page
	width 800px
	margin-left auto
	margin-right auto
	margin-top 10px

	.heading
		font-size 2em
		text-align center
	.menu 
		text-align center
		font-size 1em
		text-transform uppercase
		ul
			display block
			margin-top 15px
		
		li
			display inline
			padding 5px
		a
			text-decoration none
			color #333
		li:hover 
			background-color #F1F1F1
		
	table
		width 600px		
		margin-top 20px
		margin-left auto
		margin-right auto
		font-size .9em
		.head
			background-color #F1F1F1
			text-transform uppercase
			
		td
			margin 5px
			border 1.5px solid #FBFBFB
			padding 1px
			padding-left 5px
		tr:hover
			background-color #F6F6F6

		button
			background-color #FFF
			border 1px solid #666
			text-transform uppercase

.footer
	position fixed
	clear both
	bottom 0px
	min-height 10px
	background #1A1A1A
	width 100%
	text-transform uppercase
	color #FBFBFB
	font-size 10px
	p
		margin-left auto
		margin-right auto
		width 800px
		padding 2px
		padding-left 0px
		